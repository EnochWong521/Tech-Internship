import qi
import argparse
import sys
import time

def main(session):

tts = session.service("ALTextToSpeech")
motion_service  = session.service("ALMotion")

#Speak
tts.setLanguage("English")
tts.say("I am a robot")

#set forearm to optimal position
names = ["LElbowYaw","RElbowYaw","LShoulderRoll","RShoulderRoll"]
angleLists = [-1.57,1.57,0.5,-0.5]
times = 1.0
isAbsolute = True
motion_service.angleInterpolation(names, angleLists, times, isAbsolute)

#Move left arm
names = ["LElbowRoll","LShoulderPitch","HeadYaw","HeadPitch"]
angleLists = [0.79,-0.79,1.0,0.6]
times = 1.0
isAbsolute = True
motion_service.angleInterpolation(names, angleLists, times, isAbsolute)

#Move right arm
names = ["RElbowRoll","RShoulderPitch","HeadYaw","HeadPitch"]
angleLists = [0.79,-0.79,-1.0,0.6]
times = 1.0
isAbsolute = True
motion_service.angleInterpolation(names, angleLists, times, isAbsolute)

#Move left arm more
names = ["LElbowRoll","LShoulderPitch","HeadYaw","HeadPitch"]
angleLists = [1.55,-1.55,-0.5,0.6,0.35]
times = 1.0
isAbsolute = True
motion_service.angleInterpolation(names, angleLists, times, isAbsolute)

#Move right arm more
names = ["RElbowRoll","RShoulderPitch","HeadYaw","HeadPitch"]
angleLists = [1.55,-1.55,-0.5,-0.6,0.0]
times = 1.0
isAbsolute = True
motion_service.angleInterpolation(names, angleLists, times, isAbsolute)

if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("--ip", type=str, default="172.18.5.223",
                        help="Robot IP address. On robot or Local Naoqi: use '172.18.5.223'.")
    parser.add_argument("--port", type=int, default=9559,
                        help="Naoqi port number")

    args = parser.parse_args()
    session = qi.Session()
    try:
        session.connect("tcp://" + args.ip + ":" + str(args.port))
    except RuntimeError:
        print ("Can't connect to Naoqi at ip \"" + args.ip + "\" on port " + str(args.port) +".\n"
               "Please check your script arguments. Run with -h option for help.")
        sys.exit(1)
    main(session)
